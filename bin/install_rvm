#!/usr/bin/env bash

source ./lib/utils

install_rvm() {
  if command_exists "rvm"; then
    header "rvm allready installed"
  else
    header "rvm not found, installing..."
    sudo apt-add-repository -y ppa:rael-gc/rvm
    sudo apt update
    sudo apt install rvm
    success "rvm installed"
  fi
}

install_rvm
